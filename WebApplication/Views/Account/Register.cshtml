@model WebApplication.Models.Account.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
    Layout = "_Layout";
}

<h2 class="h2 text-center p-2 bg-primary rounded text-white">Регистрация нового пользователя</h2>
<div class="row">
    <div class="col-lg-4 col-md-6 mx-auto">
        <form method="post" asp-controller="Account" asp-action="Register">

            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Username"></label><br/>
                <input class="form-control" placeholder="Введите логин" asp-for="Username"/>
                <span asp-validation-for="Username"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label><br/>
                <input class="form-control" placeholder="Введите пароль" asp-for="Password"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm"></label><br/>
                <input class="form-control" placeholder="Повторите пароль" asp-for="PasswordConfirm"/>
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary float-right">Регистрация</button>
            </div>
        </form>
    </div>
</div>