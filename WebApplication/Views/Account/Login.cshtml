@model WebApplication.Models.Account.LoginViewModel

@{
    ViewBag.Title = "Войти";
    Layout = "_Layout";
}

<h2 class="h2 text-center p-2 bg-primary rounded text-white">Вход в приложение</h2>
<div class="row">
    <div class="mx-auto col-lg-4 col-md-6">
        <form method="post" asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input class="form-control" placeholder="Введите логин" asp-for="Username" />
                <span asp-validation-for="Username"></span>
            </div>
            <div>
                <label asp-for="Password"></label><br />
                <input class="form-control" placeholder="Введите пароль" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-check mt-2">
                <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
                <label class="form-check-label" asp-for="RememberMe">Запомнить</label>
            </div>
            <div>
                <button type="submit" class="btn btn-primary float-right">Войти</button>
            </div>
        </form>
    </div>
</div>


