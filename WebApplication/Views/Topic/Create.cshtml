@model Service.Commands.Topics.CreateTopicCommand

@{
    ViewBag.Title = "Создать голосование";
    Layout = "_Layout";
}

<h2 class="h2 text-center p-2 bg-info rounded text-white">Создание голосования</h2>
<div class="row my-4">
    <div class="mx-auto col-lg-6 col-md-8">
        <form method="post" asp-controller="Topic" id="myForm" asp-action="Create">
            
            <span asp-validation-for="@Model.Title"></span>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" placeholder="Введите название голосования" asp-for="@Model.Title"/>
            </div>
            <div class="form-group">
                <label asp-for="AddOptionModels"></label>
                <table class="table table-bordered text-center" id="dynamic-field">
                    <tr>
                        <td>
                            <span asp-validation-for="@Model.AddOptionModels[0].Name"></span>
                            <input class="form-control" placeholder="Введите вариант ответа" asp-for="@Model.AddOptionModels[0].Name"/>
                        </td>
                        <td class="align-middle">
                            <div class="m-auto" style="color: green">
                                <a>
                                    <i class="fas fa-check-circle fa-lg"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span asp-validation-for="@Model.AddOptionModels[1].Name"></span>
                            <input class="form-control" placeholder="Введите вариант ответа" asp-for="@Model.AddOptionModels[1].Name"/>
                        </td>
                        <td class="align-middle">
                            <div class="m-auto">
                                <a id="add" style="color: green">
                                    <i class="fa fa-plus-circle fa-lg"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <button type="submit" class="btn btn-primary float-right">Создать</button>
        </form>
    </div>
</div>